#include <iostream>
using namespace std;
int main()
{
    int t,s,h,m;
    cout<<" Hola, por favor ingrese la cantidad de segundos" << endl;
    cin>> t;
    if (t%3600==0) {
        h=t/3600;
    }
else {
    h=t/3600;
    t=t%3600;
    if (t%60==0)
    {
        m=t/60;
    }
    else 
    {
        m=t/60;
        t=t%60;
        s=t;
    }
}

cout << h << "hora" << m << "minutos" << s << "segundos" << endl;
    return 0;
}
